<script>
  NO_BACKBONE = true;

  (function($) {
      $.fn.uniformHeight = function() {
          var maxHeight = 0

          this.each(function() {
              if ($(this).height() > maxHeight) { maxHeight = $(this).height(); }
          })

          maxHeight += 15; // padding

          this.each(function () {
            $(this).height(maxHeight);
          })
      }
  })(jQuery);

  $(document).ready(function () {
    $(".thumbnails").find(".thumbnail").uniformHeight();
  });
</script>


<!DOCTYPE html>
<html>
<head>
  <title>BillTracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors] || flash[:notices] %>
  <ul>
  <% flash.each do |name, msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>

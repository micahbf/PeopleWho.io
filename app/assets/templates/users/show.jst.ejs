<h1><%= user.displayName() %></h1>

<h3>
  <% if (user.balance < 0) { %>
    You owe them $<%= BT.int_to_decimal(user.balance * -1) %>
  <% } else if (user.balance === 0) { %>
    You're even steven!
  <% } else { %>
    They owe you $<%= BT.int_to_decimal(user.balance) %>
  <% } %>
</h3>

<table class="table table-striped table-condensed">
  <% user.bill_splits.each(function(split) { %>
    <tr>
      <td><%= split.bill.created_at.format("D.MMM.YY") %></td>
      <td><%= split.bill.description %></td>
      <td><% if (split.debtor_id === CURRENT_USER_ID) { %>-<% } %>$<%= BT.int_to_decimal(split.amount) %></td>
    </tr>
  <% }) %>
</table>